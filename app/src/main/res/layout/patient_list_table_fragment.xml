<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.fragments.PatientListTableFragment">

    <!-- Filter Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/filterSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="6">

            <!-- Time Period -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time period"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinnerTimePeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <!-- Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinnerStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <!-- Type -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinnerType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <!-- Gender -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <!-- Age (Now has spacing) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinnerAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Second Section (Buttons + Pagination) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/actionSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterSection">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Left Section (Buttons) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnOpenViewer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/header_blue"
                    android:drawableLeft="@drawable/ic_viewer"
                    android:padding="8dp"
                    android:text="Open in viewer"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnApplyTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/header_blue"
                    android:drawableLeft="@drawable/ic_tags"
                    android:padding="8dp"
                    android:text="Apply tags"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnExport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/header_blue"
                    android:drawableLeft="@drawable/ic_export"
                    android:padding="8dp"
                    android:text="Export"
                    android:textAllCaps="false" />
            </LinearLayout>

            <!-- Right Section (Pagination) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPagination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:text="1-10 of 20"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnPrevPage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Previous Page"
                    android:padding="12dp"
                    android:src="@drawable/ic_prev" />

                <ImageButton
                    android:id="@+id/btnNextPage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Next Page"
                    android:padding="12dp"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Table Section -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp"
        android:stretchColumns="*"
        app:layout_constraintTop_toBottomOf="@id/actionSection">

        <!-- Table Header Row -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="48dp"
            android:paddingBottom="8dp">

            <TextView android:layout_width="0dp" android:layout_weight="0.8" android:text=""/>
            <TextView android:layout_width="0dp" android:layout_weight="1.5" android:text="Case" android:textStyle="bold"/>
            <TextView android:layout_width="0dp" android:layout_weight="1.5" android:text="Physician" android:textStyle="bold"/>
            <TextView android:layout_width="0dp" android:layout_weight="1.5" android:text="Patient" android:textStyle="bold"/>
            <TextView android:layout_width="0dp" android:layout_weight="2.2" android:text="Birthdate &amp; Gender" android:textStyle="bold"/>
            <TextView android:layout_width="0dp" android:layout_weight="1.8" android:text="Last Update" android:textStyle="bold"/>
            <TextView android:layout_width="0dp" android:layout_weight="2.5" android:text="Status" android:textStyle="bold" android:id="@+id/etStatus"/>
            <TextView android:layout_width="0dp" android:layout_weight="1.5" android:text="Type" android:textStyle="bold"/>
            <TextView android:layout_width="0dp" android:layout_weight="3" android:text="Assessments" android:textStyle="bold"/>
        </TableRow>

        <!-- Table Data Row -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="48dp"
            android:paddingBottom="8dp">

            <CheckBox android:layout_width="0dp" android:layout_weight="0.8" android:minHeight="48dp"/>
            <TextView android:layout_width="0dp" android:layout_weight="1.5" android:text="T121210-EU"/>
            <TextView android:layout_width="0dp" android:layout_weight="1.5" android:text="Dr. Lee K."/>
            <TextView android:layout_width="0dp" android:layout_weight="1.5" android:text="Cedar Pete"/>
            <TextView android:layout_width="0dp" android:layout_weight="2.2" android:text="24 Nov, 1990 (26yo)\nMale"/>
            <TextView android:layout_width="0dp" android:layout_weight="1.8" android:text="10 Nov, 2024\n10:00 AM"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_status_for_review"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="FOR REVIEW"
                    android:textColor="@color/blue" />
            </LinearLayout>


            <TextView android:layout_width="0dp" android:layout_weight="1.5" android:text="Left &amp;\n Right"/>

            <!-- Assessments Column: Fixed Alignment and Width -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_image1"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_image2"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_image3"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/light_gray"
                    android:gravity="center"
                    android:text="+2"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </TableRow>
    </TableLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
